generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  ingredients String[]
  active      Boolean        @default(true)
  orders      OrderProduct[]
}

model Order {
  id               Int            @id @default(autoincrement())
  customerFullname String
  customerCity     String
  customerStreet   String
  status           OrderStatus    @default(Processing)
  time             DateTime       @default(now())
  total            Int
  payment          PaymentType
  orderItems       OrderProduct[]
}

model OrderProduct {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
}

enum PaymentType {
  Cash
  Card
}

enum OrderStatus {
  Processing
  Accepted
  Preparing
  Shipped
  Completed
}
